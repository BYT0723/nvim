{
    "uml": {
        "prefix": "uml",
        "body": [
            "@startuml",
            "",
            "$1",
            "",
            "@enduml"
        ],
        "description": "uml start and end"
    },
    "json": {
        "prefix": "json",
        "body": [
            "@startjson",
            "{",
            "\t${1}",
            "}",
            "@endjson"
        ],
        "description": "json"
    },
    "object": {
        "prefix": "obj",
        "body": [
            "object ${1:name}"
        ],
        "description": "object for uml"
    },
    "object-alias": {
        "prefix": "objas",
        "body": [
            "object \"${1:desc}\" as ${2:name}"
        ],
        "description": "object as alias for uml"
    },
    "diamond": {
        "prefix": "dia",
        "body": [
            "diamond ${1:name}"
        ],
        "description": "diamond for relation"
    },
    "package": {
        "prefix": "package",
        "body": [
            "package ${1:name} {",
            "\t${2:relation}",
            "}"
        ],
        "description": "package"
    },
    "class": {
        "prefix": "class",
        "body": [
            "class ${1:name} {",
            "\t$2",
            "}$0"
        ],
        "description": "class"
    },
    "interface": {
        "prefix": "interface",
        "body": [
            "interface ${1:name} {",
            "\t${2:field}",
            "}$0"
        ],
        "description": "interface"
    },
    "enum": {
        "prefix": "enum",
        "body": [
            "enum ${1:name} {",
            "\t${2:field}",
            "}"
        ],
        "description": "enum"
    },
    "note": {
        "prefix": "note",
        "body": [
            "note on link #${1:color}",
            "${2:desc}",
            "end note"
        ],
        "description": "note"
    },
    "extension": {
        "prefix": "ex",
        "body": [
            "${1:interface} <|-- ${2:struct}"
        ],
        "description": "extension"
    },
    "composition": {
        "prefix": "com",
        "body": [
            "${1:struct1} \"${3:m}\" *-- \"${4:n}\" ${2:struct2}"
        ],
        "description": "composition"
    }
}
