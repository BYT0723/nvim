{
    "coc.preferences.extensionUpdateCheck": "weekly",
    "suggest.defaultSortMethod": "alphabetical",
    // completeIcon 
    "suggest.completionItemKindLabels": {
        "class": "\uf0e8",
        "struct": "\uf668",
        "interface": "\uf033",
        "function": "\u0192",
        "method": "\uf6a6",
        "field": "\uf6d5",
        "value": "\uf89f"
    },
    "suggest.languageSourcePriority": 99,
    // "suggest.maxCompleteItemCount": 12,
    // snippets
    "snippets.textmateSnippetsRoots": [
        "/home/tao/.config/nvim/snippets/"
    ],
    "snippets.userSnippetsDirectory": "/home/tao/.config/nvim/snippets/",
    "snippets.snipmate.author": "BYT0723",
    "snippets.extends": {
    },
    // explorer
    "explorer.icon.enableNerdfont": true,
    "explorer.width": 35,
    "explorer.file.showHiddenFiles": true,
    "explorer.file.column.indent.indentLine": true,
    "explorer.git.showIgnored": true,
    "explorer.quitOnOpen": true,
    "explorer.openAction.relativePath": true,
    "explorer.file.reveal.auto": true,
    // check
    "diagnostic.signPriority": 1,
    "diagnostic.errorSign": "\uf00d",
    "diagnostic.warningSign": "\uf071",
    "diagnostic.infoSign": "\uf129",
    "diagnostic.hintSign": "\uf864",
    "diagnostic.displayByAle": false,
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualTextPrefix": " ",
    "diagnostic.virtualText": true,
    "diagnostic.enableMessage": "jump",
    "codeLens.enable": true,
    // 保存时自动格式化
    "coc.preferences.formatOnSaveFiletypes": [
        "c",
        "go",
        "python",
        "java",
        "json"
    ],
    // Java
    "java.completion.enabled": true,
    "java.completion.maxResults": 10,
    "java.import.maven.enabled": true,
    "java.import.gradle.enabled": false,
    "java.configuration.maven.userSettings": "/opt/maven/conf/settings.xml",
    "java.maven.downloadSources": true,
    "java.maven.updateSnapshots": true,
    // Python
    "python.formatting.provider": "none",
    // html
    "emmet.showExpandedAbbreviation":"always",
    "emmet.showAbbreviationSuggestions": true
}
